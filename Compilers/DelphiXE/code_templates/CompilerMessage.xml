<?xml version="1.0" encoding="utf-8" ?>

<codetemplate	xmlns="http://schemas.borland.com/Delphi/2005/codetemplates"
				version="1.0.0">
	<template name="$m" invoke="auto">
		<point name="message">
			<hint>
				Enter message here
			</hint>
			<text>
				Message
			</text>
		</point>
		<description>
			{$MESSAGE 'A compiler message'};
		</description>
		<author>
			Peter Hinrichsen
		</author>
		<code language="Delphi" context="methodbody" delimiter="|"><![CDATA[{$MESSAGE '|message|'}]]>
		</code>
	</template>
</codetemplate>
